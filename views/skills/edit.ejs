<%- include('../partials/header') %>

<h1>Edit Skill - <%=skill.ability%> </h1>

<form action="/skills/<%=skill.id%>?_method=PUT" method="POST" autocomplete="off">

  <input type="text" name="ability" value="<%= skill.ability %>">
  <input type="checkbox" name="learned" 
    <% if(skill.learned){ %>
    checked
    <% } %>
  >
  
  <button type="submit">Edit Skill</button>


</form>

